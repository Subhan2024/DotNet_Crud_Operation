@model Crud_Operation_Practice.Models.Product;

<div class="container">
    <div class="row">
        <form method="post">
        <h1>Add Products</h1>
            <div class="mb-3">
                <label class="form-label">Product_Name</label>
                <input type="text" class="form-control" asp-for="ProdName">
            </div>
            <div class="mb-3">
                <label class="form-label">Product_Description</label>
                <input type="text" class="form-control" asp-for="ProdDescription">
            </div>
            <div class="mb-3">
                <label class="form-label">Product_Price</label>
                <input type="text" class="form-control" asp-for="ProdPrice">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

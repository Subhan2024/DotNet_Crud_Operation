
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <h1>View Products</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product_Name</th>
                    <th>Product_Description</th>
                    <th>Product_Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var prod in ViewBag.Practice)
                {
                    
                <tr>
                    <th>@prod.Id</th>
                    <td>@prod.ProdName</td>
                    <td>@prod.ProdDescription</td>
                    <td>@prod.ProdPrice</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-Id="@prod.Id">Delete</a>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Update" asp-route-Id="@prod.Id">Update</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

